{
  "name": "moneymate-backend",
  "version": "1.0.0",
  "description": "Moneymate is a personal finance tracker app",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon -r tsconfig-paths/register src/app.ts",
    "build": "tsc",
    "start": "node -r tsconfig-paths/register dist/app.js",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate ./src/migration/InitialMigration -d ./data-source.ts",
    "migration:create": "typeorm-ts-node-commonjs migration:create ./src/migration/ManualMigration",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d ./data-source.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d ./data-source.ts",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d ./data-source.ts",
    "seed": "ts-node src/seed.ts",
    "db:reset": "npm run migration:revert && npm run migration:run && npm run seed"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.1",
    "eslint": "^9.35.0",
    "morgan": "^1.10.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.26"
  }
}
