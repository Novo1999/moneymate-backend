{
  "compilerOptions": {
    "module": "node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node16",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "experimentalDecorators": true,
  },
  "include": ["src/**/*"]
}
